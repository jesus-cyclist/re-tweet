{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@assets*": ["./src/shared/ui/assets*"]
        },
        "typeRoots": ["node_modules/@types"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "exclude": [
        "node_modules",
        "node_modules/chokidar/types/index.d.ts",
        "cypress.config.ts",
        "cypress",
        "node_modules"
    ]
}
