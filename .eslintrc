{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "@typescript-eslint"],
    "rules": {
        "no-console": 2,
        "no-var": "error",
        "prefer-const": "warn",
        "no-unused-vars": "error",
        "react/prop-types": "off",
        "indent": ["error", 4],
        "prettier/prettier": [
            "warn",
            {
                "endOfLine": "auto",
                "tabWidth": 4,
                "trailingComma": "none"
            }
        ]
    }
}
